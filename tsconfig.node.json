{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "vite.config.ts",
    "src/db/**/*.ts",
    "src/config/**/*.ts",
    "src/services/**/*.ts"
  ]
}